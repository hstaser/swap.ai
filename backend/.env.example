# Swipr.AI Backend Environment Configuration

# Application Settings
APP_NAME=Swipr.AI Backend
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=info

# Server Settings
HOST=0.0.0.0
PORT=8000

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_HOURS=24

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/swipr_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=swipr_db
DB_USER=swipr_user
DB_PASSWORD=your_password

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# External APIs
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
POLYGON_API_KEY=your_polygon_key
NEWS_API_KEY=your_news_api_key

# Email Settings (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# AWS Settings (for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=swipr-ai-storage
AWS_REGION=us-east-1

# Monitoring
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_PORTFOLIO_OPTIMIZATION=true
ENABLE_REAL_TIME_DATA=false
